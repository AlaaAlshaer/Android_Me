<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/activity_main_master_list_container"
        android:name="com.example.andriod_me.ui.MasterListFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_master_list" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/activity_android_me_liner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_me_liner_layout_padding">

        <FrameLayout
            android:id="@+id/activity_android_me_fl_head_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_me_fl_head_container_layout_height" />

        <FrameLayout
            android:id="@+id/activity_android_me_fl_body_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_me_fl_head_container_layout_height" />

        <FrameLayout
            android:id="@+id/activity_android_me_fl_leg_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_me_fl_head_container_layout_height" />
    </LinearLayout>


</LinearLayout>