<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AndroidMeActivity"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/activity_android_me_fl_head_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_me_fl_head_container_layout_height" />

        <FrameLayout
            android:id="@+id/activity_android_me_fl_body_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_me_fl_head_container_layout_height" />

        <FrameLayout
            android:id="@+id/activity_android_me_fl_leg_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_me_fl_head_container_layout_height" />
    </LinearLayout>


</ScrollView>